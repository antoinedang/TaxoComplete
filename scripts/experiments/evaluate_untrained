#!/bin/bash
#SBATCH --job-name=taxo
#SBATCH --output=job_output.txt
#SBATCH --error=job_error.txt
#SBATCH --ntasks=1
#SBATCH --time=1800:00
#SBATCH --mem=100Gb

source ~/.bashrc
module load miniconda/3
module load cuda/11.1
conda create -n taxocomplete python=3.9
conda activate taxocomplete
/cvmfs/ai.mila.quebec/apps/x86_64/debian/miniconda/3/bin/python -m pip install --upgrade pip
pip install torch==2.0.1+cu118 torchvision==0.15.2+cu118 torchaudio==2.0.2+cu118 -f https://download.pytorch.org/whl/torch_stable.html
conda install -c dglteam dgl-cuda11.1
pip install -r requirements
echo ""
echo ""
echo "SEMNOUN:"
python3 src/evaluate.py -c config_files_evaluate/semeval_noun/config_clst20_s47.json --untrained
python3 src/long_tail_evaluate.py data/SemEval-Noun/untrained/error_analysis.pkl
python3 src/plot_cosine_similarities.py data/SemEval-Noun/untrained/error_analysis.pkl
python3 src/plot_distances.py data/SemEval-Noun/untrained/error_analysis.pkl
echo "SEMVERB:"
python3 src/evaluate.py -c config_files_evaluate/semeval_verb/config_clst20_s47.json --untrained
python3 src/long_tail_evaluate.py data/SemEval-Verb/untrained/error_analysis.pkl
python3 src/plot_cosine_similarities.py data/SemEval-Verb/untrained/error_analysis.pkl
python3 src/plot_distances.py data/SemEval-Verb/untrained/error_analysis.pkl
echo "MAG-PSY:"
python3 src/evaluate.py -c config_files_evaluate/psy/config_clst20_s47.json --untrained
python3 src/long_tail_evaluate.py data/MAG-PSY/untrained/error_analysis.pkl
python3 src/plot_cosine_similarities.py data/MAG-PSY/untrained/error_analysis.pkl
python3 src/plot_distances.py data/MAG-PSY/untrained/error_analysis.pkl
echo "MAG-CS-Wiki:"
python3 src/evaluate.py -c config_files_evaluate/cs/config_clst20_s47.json --untrained
python3 src/long_tail_evaluate.py data/MAG-CS-Wiki/untrained/error_analysis.pkl
python3 src/plot_cosine_similarities.py data/MAG-CS-Wiki/untrained/error_analysis.pkl
python3 src/plot_distances.py data/MAG-CS-Wiki/untrained/error_analysis.pkl
echo "ERROR CODE: $?"

